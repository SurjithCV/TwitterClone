@model TwitterClone.Models.Tweeps
@{
    ViewBag.Title = "Twitter";
}

<div class="jumbotron">
    <div class="row">
        <div class="col4">
            <h2>Twitter </h2>
        </div>
    </div>
    <div class="row">
    </div>
    <div class="row">
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger">@ViewBag.Error</div>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-success">@ViewBag.Message</div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col4">
            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @id = "loginForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control ", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.UserId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control ", placeholder = "Password", @type = "password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <button class="btn btn-info" type="submit">Login</button>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="row">
        <div class="col4">
            Don't have an account ? @Html.ActionLink("Sign Up now ", "SignUp", "Login", new { @class="btn btn-link" })
        </div>
    </div>
</div>

